<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js">
    <link rel="stylesheet" href="../css/profile.css">
</head>
<body>
    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            <div class="col-md-3 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                
                </div>
            </div>
            <div class="col-md-5 border-right" id="form-profile">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Thông tin cá nhân</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12"><label class="labels">Họ tên</label><input type="text" class="form-control" id="name" value=""></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Ngày sinh</label>
                            <input type="date" class="form-control" placeholder="dd/mm/yy" id="date" value=""></div>
                        <div class="col-md-12" id="row-phone"><label class="labels">Số điện thoại</label>
                            <input type="text" class="form-control" placeholder="" id="phone" value="">
                            <p class="errorPhone">Số điện thoại không hợp lệ</p>
                        </div>
                            
                        <div class="col-md-12" >
                            <label class="labels">Địa chỉ</label>
                            <input type="text" class="form-control" placeholder=""  id="address" value="">
                            
                        </div>
            
                        <div class="col-md-12"><label class="labels" id="row-email">Email</label>
                            <input type="mail" class="form-control" placeholder="" id="mail" value="">
                            <p class="errorEmail">Email không hợp lệ</p>
                        </div>
                        <div class="col-md-12" ><label class="labels">Vai trò</label>
                            <select name="option-role" id="option-role" class="form-control">
                                <option value="user" >User</option>
                                <option value="admin">Admin</option>
                            </select>
                            
                        </div>
                        <div class="col-md-12" >
                            <label class="labels">Mật khẩu</label>
                            <input type="password" class="form-control" placeholder=""  id="password" value=""> 
                        </div>

                    </div>
                    <div class="mt-5 text-center">
                        <button class="btn btn-primary profile-button" type="button" id="submit-profile">Lưu</button>
                      
                    </div>
                </div>
            </div>
           
        </div>
    </div>
    </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="../vendors/bootstrap/bootstrap.min.css">
	<link rel="stylesheet" href="../vendors/fontawesome/css/all.min.css">
	<link rel="stylesheet" href="../vendors/themify-icons/themify-icons.css">
	<link rel="stylesheet" href="../vendors/linericon/style.css">
	<link rel="stylesheet" href="../vendors/owl-carousel/owl.theme.default.min.css">
	<link rel="stylesheet" href="../vendors/owl-carousel/owl.carousel.min.css">
	<link rel="stylesheet" href="../vendors/nice-select/nice-select.css">
	<link rel="stylesheet" href="../vendors/nouislider/nouislider.min.css">
    <script src="../js/profileadmin.js"></script>
    <script>
        function passFileUrl(){
            document.getElementById('asgnmnt_file').click();
        }
    
        function fileSelected(inputData){
            document.getElementById('asgnmnt_file_img').src = window.URL.createObjectURL(inputData.files[0])
        }
        </script>
</body>
</html>